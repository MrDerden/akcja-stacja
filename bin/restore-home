#!/bin/bash

if [ $# -lt 1 ]; then 
  echo "please specify backup directory on sezam (usually old laptop name)"; 
  exit 1; 
fi

HOST=$1

RESTORE=<<"END"
Pulpit 
HasÅ‚a.kdbx 
Dokumenty 
.mozilla 
.config/libreoffice 
.config/chromium
END

for dir in $RESTORE;
do 
  duplicity restore --force --file-to-restore=/home/$USER/$dir scp://$USER@sezam/$HOST $HOME/$dir; 
  if [ $? -ne 0 ]; then exit 1; fi
done
